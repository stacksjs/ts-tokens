{
  "name": "vue-tokens",
  "type": "module",
  "version": "0.1.0",
  "description": "Vue 3 components for Solana tokens and NFTs",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/ts-tokens/tree/main/packages/vue#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/ts-tokens.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/ts-tokens/issues"
  },
  "keywords": [
    "typescript",
    "solana",
    "token",
    "nft",
    "vue",
    "vue3",
    "components",
    "stacksjs"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./composables": {
      "types": "./dist/composables/index.d.ts",
      "import": "./dist/composables/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target browser",
    "lint": "bunx --bun eslint .",
    "lint:fix": "bunx --bun eslint . --fix",
    "release": "bun publish --access public --provenance",
    "prepublishOnly": "bun --bun run build",
    "test": "bun test",
    "typecheck": "bun --bun tsc --noEmit"
  },
  "dependencies": {
    "ts-tokens": "workspace:*"
  },
  "peerDependencies": {
    "vue": ">=3.3.0",
    "@solana/web3.js": ">=1.87.0"
  },
  "devDependencies": {
    "@vue/test-utils": "^2.4.6",
    "better-dx": "^0.2.5",
    "happy-dom": "^20.6.1",
    "vue": "^3.4.0"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "bunx --bun eslint . --fix"
  }
}
