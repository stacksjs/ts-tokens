{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "moduleDetection": "force",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "paths": {
      "ts-tokens": ["./packages/ts-tokens/src/index.ts"],
      "ts-tokens/*": ["./packages/ts-tokens/src/*/index.ts", "./packages/ts-tokens/src/*"],
      "ts-governance": ["./packages/ts-governance/src/index.ts"],
      "ts-governance/*": ["./packages/ts-governance/src/*/index.ts", "./packages/ts-governance/src/*"]
    },
    "resolveJsonModule": true,
    "types": ["bun"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "removeComments": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedDeclarations": false,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**/dist",
    "buddy-bot.config.ts",
    "docs",
    "examples",
    "**/build.ts",
    "**/eslint.config.ts",
    "e2e"
  ]
}
