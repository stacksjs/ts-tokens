{
  "name": "ts-tokens",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Generate your own fungible or non-fungible tokens.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/ts-tokens#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/ts-tokens.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/ts-tokens/issues"
  },
  "keywords": ["typescript", "token", "tokens", "lightweight", "powerful", "stacksjs"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["README.md", "dist"],
  "scripts": {
    "build": "bun --bun build.ts && bun run compile",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "test": "bun test packages/ test/",
    "lint": "bunx --bun pickier .",
    "lint:fix": "bunx --bun pickier . --fix",
    "changelog": "bunx logsmith --verbose",
    "changelog:generate": "bunx logsmith --output CHANGELOG.md",
    "release": "bun run changelog:generate && bunx bumpx prompt --recursive",
    "postinstall": "bunx git-hooks",
    "dev:docs": "bun --bun bunpress dev docs",
    "build:docs": "bun --bun bunpress build docs",
    "preview:docs": "bun --bun bunpress preview docs",
    "typecheck": "bun --bun tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "better-dx": "^0.2.5"
  },
  "git-hooks": {
    "pre-commit": {
      "staged-lint": {
        "*.ts": "bunx --bun pickier --fix"
      }
    },
    "commit-msg": "bunx gitlint --edit .git/COMMIT_EDITMSG"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
